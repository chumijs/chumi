{
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "chumi",
    "rootDir": "chumi",
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./lib/types",
    "tsBuildInfoFile": "./lib/.tsbuildinfo"
  },
  "files": ["server.d.ts"],
  "include": ["chumi/**/*.ts"]
}
